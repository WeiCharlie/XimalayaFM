<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/main_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_tab_item_discover"
            style="@style/AppTheme.MainTabItem"
            android:checked="true"
            android:drawableTop="@drawable/main_tab_item_discover_selector"
            android:text="发现" />

        <RadioButton
            android:id="@+id/main_tab_item_custom"
            style="@style/AppTheme.MainTabItem"
            android:drawableTop="@drawable/main_tab_item_custom_selector"
            android:text="定制听" />

        <RadioButton

            style="@style/AppTheme.MainTabItem"
            android:enabled="false" />

        <RadioButton
            android:id="@+id/main_tab_item_download"
            style="@style/AppTheme.MainTabItem"
            android:drawableTop="@drawable/main_tab_item_download_selector"
            android:text="下载听" />

        <RadioButton
            android:id="@+id/main_tab_item_personal"
            style="@style/AppTheme.MainTabItem"
            android:drawableTop="@drawable/main_tab_item_personal_selector"
            android:text="我"
            />
    </RadioGroup>

</LinearLayout>
